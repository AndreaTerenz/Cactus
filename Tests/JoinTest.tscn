script/source = "extends Control


### Automatic References Start ###
onready var _h_box_container: HBoxContainer = $HBoxContainer
onready var _line_edit: LineEdit = $HBoxContainer/LineEdit
onready var _lobby_name: Label = $LobbyName
### Automatic References Stop ###

var _result := {}

func _ready():
	MainConnection.connect(\"request_completed\", self, \"_on_request_completed\")

func _on_request_completed(result, response_code, headers, body):
	var json = JSON.parse(body.get_string_from_utf8())
	_result = json.result

func _on_Host_pressed() -> void:
	var p_name = _line_edit.text
	
	if p_name != \"\":
		MainConnection.send_get(\"new-lobby/%s\" % p_name)
		yield(MainConnection, \"request_completed\")
		
		print(_result)
		if _result[\"success\"]:
			_h_box_container.visible = false
			
			_lobby_name.text = _result[\"lobby_id\"]
			_lobby_name.visible = true
"

